            });

            // Load users page when clicking "Users" in sidebar
            $('#usersLink').click(function(e) {
                e.preventDefault(); // Prevent default link behavior
                window.location.href = '/admin/users'; // Redirect to users page
            });
        });
    </script>
</body>
